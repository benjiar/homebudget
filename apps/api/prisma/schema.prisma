generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  receipts  Receipt[]
  household Household? @relation(fields: [householdId], references: [id])
  householdId String?
}

model Household {
  id       String    @id @default(uuid())
  members  User[]
  receipts Receipt[]
}

model Receipt {
  id         String   @id @default(uuid())
  title      String
  total      Float
  category   String
  receivedAt DateTime
  merchant   String
  source     String
  rawFileUrl String
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  household  Household? @relation(fields: [householdId], references: [id])
  householdId String?
} 