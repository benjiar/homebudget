// Dashboard component for authenticated users
function DashboardComponent() {
  const { user, loading, session } = useAuth();
  const router = useRouter();
  const { 
    households, 
    hasHouseholds, 
    isLoading: isLoadingHouseholds, 
    currentHousehold 
  } = useHouseholdGuard({ 
    allowGuests: true, 
    showNoHouseholdModal: true 
  });

  const [receipts, setReceipts] = useState<Receipt[]>([]);
  const [totalSpent, setTotalSpent] = useState<number>(0);
  const [categories, setCategories] = useState<Category[]>([]);
  const [isLoadingData, setIsLoadingData] = useState(false);
  const [message, setMessage] = useState<{ type: 'success' | 'error'; text: string } | null>(null);
  const [showWelcomeModal, setShowWelcomeModal] = useState(false);

  // Show welcome modal for users with no households
  useEffect(() => {
    if (!loading && user && !isLoadingHouseholds) {
      if (!hasHouseholds) {
        setShowWelcomeModal(true);
      } else {
        // Close modal if households are now available
        setShowWelcomeModal(false);
      }
    }
  }, [user, loading, isLoadingHouseholds, hasHouseholds]);

  // Load dashboard data when household is available
  useEffect(() => {
    if (currentHousehold) {
      loadDashboardData(currentHousehold.id);
    }
  }, [currentHousehold]);

  const loadDashboardData = async (householdId: string) => {
    setIsLoadingData(true);
    try {
      // Load recent receipts using fetch with auth token
      const receiptsResponse = await fetch(`/api/receipts/household/${householdId}?limit=5`, {
        headers: {
          'Authorization': `Bearer ${session?.access_token}`,
        },
      });
      
      if (receiptsResponse.ok) {
        const receiptsData = await receiptsResponse.json();
        setReceipts(receiptsData.receipts || []);
      } else {
        console.error('Failed to load receipts:', receiptsResponse.status);
      }

      // Load budget overview using fetch with auth token
      const budgetResponse = await fetch(`/api/categories/budget-overview/${householdId}`, {
        headers: {
          'Authorization': `Bearer ${session?.access_token}`,
        },
      });

      if (budgetResponse.ok) {
        const budgetData = await budgetResponse.json();
        setCategories(budgetData.categories || []);
        
        // Update total spent from budget data
        const totalSpent = budgetData.categories.reduce((sum: number, categoryData: { spent: number }) => sum + categoryData.spent, 0);
        setTotalSpent(totalSpent);
      } else {
        console.error('Failed to load budget data:', budgetResponse.status);
      }
    } catch (error) {
      console.error('Failed to load dashboard data:', error);
    } finally {
      setIsLoadingData(false);
    }
  };

  const getProgressBarColor = (percentage: number) => {
    if (percentage <= 50) return 'from-emerald-500 to-emerald-600';
    if (percentage <= 80) return 'from-amber-500 to-orange-500';
    if (percentage <= 100) return 'from-orange-500 to-red-500';
    return 'from-red-500 to-red-600';
  };

  const getProgressBarBgColor = (percentage: number) => {
    if (percentage <= 50) return 'bg-emerald-50 border-emerald-100';
    if (percentage <= 80) return 'bg-amber-50 border-amber-100';
    if (percentage <= 100) return 'bg-orange-50 border-orange-100';
    return 'bg-red-50 border-red-100';
  };

  const statCards = useMemo(() => {
    // Check if any budgets are defined
    const hasBudgets = categories.some((cat: any) => cat.budget > 0);
    
    // Get current month name for display
    const currentDate = new Date();
    const currentMonthName = currentDate.toLocaleDateString('en-US', { month: 'long' });
    
    const totalBudget = categories.reduce((sum: number, categoryData: any) => sum + (categoryData.budget || 0), 0);
    
    return [
      {
        title: "Households",
        value: households.length,
        icon: "üè†",
        gradient: "from-blue-500 to-blue-600",
        bgGradient: "from-blue-50 to-blue-100/50"
      },
      {
        title: `${currentMonthName} Receipts`,
        value: receipts.length,
        icon: "üìÑ",
        gradient: "from-emerald-500 to-emerald-600",
        bgGradient: "from-emerald-50 to-emerald-100/50"
      },
      {
        title: `${currentMonthName} Spent`,
        value: formatCurrency(totalSpent || 0),
        icon: "‚Ç™",
        gradient: "from-violet-500 to-violet-600",
        bgGradient: "from-violet-50 to-violet-100/50"
      },
      {
        title: "Budget Used",
        value: hasBudgets ? `${((totalSpent / (totalBudget || 1)) * 100).toFixed(1)}%` : "Not Defined",
        icon: "üìä",
        gradient: hasBudgets 
          ? (totalSpent / (totalBudget || 1) <= 1 ? "from-orange-500 to-orange-600" : "from-red-500 to-red-600")
          : "from-slate-400 to-slate-500",
        bgGradient: hasBudgets 
          ? (totalSpent / (totalBudget || 1) <= 1 ? "from-orange-50 to-orange-100/50" : "from-red-50 to-red-100/50")
          : "from-slate-50 to-slate-100/50",
        showInfo: !hasBudgets
      }
    ];
  }, [households, receipts, totalSpent, categories]);

  return (
    <Layout title="Dashboard">
      {/* Welcome Modal for users with no households */}
      <WelcomeModal 
        isOpen={showWelcomeModal} 
        onClose={() => setShowWelcomeModal(false)} 
      />
      
      <div className="min-h-screen bg-gradient-to-br from-slate-50/50 via-blue-50/30 to-indigo-50/20">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          {/* Header */}
          <div className="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-12 space-y-6 sm:space-y-0">
            <div className="space-y-2">
              <h1 className="text-4xl sm:text-5xl font-bold bg-gradient-to-r from-slate-900 via-blue-900 to-indigo-900 bg-clip-text text-transparent">
                Welcome back, {user?.user_metadata?.full_name?.split(' ')[0] || user?.email?.split('@')[0]}! üëã
              </h1>
              <p className="text-lg text-slate-600">
                Here&apos;s your financial command center
              </p>
            </div>
            {households.length > 1 && (
              <div className="relative">
                <select
                  value={currentHousehold?.id}
                  onChange={(e) => router.push(`/receipts?household=${e.target.value}`)}
                  className="appearance-none bg-white/80 backdrop-blur-lg border border-white/30 rounded-2xl px-6 py-3 pr-12 text-slate-900 font-medium shadow-lg hover:shadow-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-300"
                >
                  {households.map((household) => (
                    <option key={household.id} value={household.id}>
                      {household.name}
                    </option>
                  ))}
                </select>
                <div className="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none">
                  <svg className="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>
            )}
          </div>

          {/* Message */}
          {message && (
            <div className={`mb-8 p-6 rounded-2xl backdrop-blur-lg border transition-all duration-300 ${
              message.type === 'success' 
                ? 'bg-emerald-50/80 text-emerald-800 border-emerald-200/50 shadow-emerald-500/10' 
                : 'bg-red-50/80 text-red-800 border-red-200/50 shadow-red-500/10'
            } shadow-lg`}>
              <div className="flex items-center">
                <div className="flex-shrink-0">
                  {message.type === 'success' ? (
                    <div className="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center">
                      <svg className="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd" />
                      </svg>
                    </div>
                  ) : (
                    <div className="w-6 h-6 bg-red-500 rounded-full flex items-center justify-center">
                      <svg className="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fillRule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clipRule="evenodd" />
                      </svg>
                    </div>
                  )}
                </div>
                <div className="ml-4 font-medium">{message.text}</div>
              </div>
            </div>
          )}

          {isLoadingData ? (
            <div className="space-y-8 animate-pulse">
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {Array.from({ length: 4 }).map((_, i) => (
                  <LoadingCard key={i} lines={2} />
                ))}
              </div>
              <LoadingCard lines={6} />
            </div>
          ) : (
            <>
              {/* Stats Overview */}
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                {statCards.map((stat, index) => (
                  <div
                    key={stat.title}
                    className={`group relative bg-gradient-to-br ${stat.bgGradient} backdrop-blur-lg rounded-3xl p-6 border border-white/30 shadow-lg hover:shadow-2xl transition-all duration-500 hover:scale-105 cursor-pointer overflow-hidden`}
                    style={{ animationDelay: `${index * 100}ms` }}
                  >
                    <div className="absolute top-0 right-0 w-32 h-32 -mr-16 -mt-16 opacity-10">
                      <div className={`w-full h-full rounded-full bg-gradient-to-br ${stat.gradient} transform rotate-12 group-hover:rotate-45 transition-transform duration-700`}></div>
                    </div>
                    <div className="relative z-10">
                      <div className="flex items-center justify-between mb-4">
                        <div className={`w-12 h-12 rounded-2xl bg-gradient-to-br ${stat.gradient} shadow-lg flex items-center justify-center text-white text-xl font-bold group-hover:scale-110 transition-transform duration-300`}>
                          {stat.icon}
                        </div>
                        <div className="text-right">
                          <div className="text-xs font-medium text-slate-500 uppercase tracking-wider">{stat.title}</div>
                        </div>
                      </div>
                      <div className="flex items-center justify-between">
                        <div className="text-3xl font-bold text-slate-900 group-hover:text-slate-700 transition-colors duration-300">
                          {stat.value}
                        </div>
                        {stat.showInfo && (
                          <button
                            className="ml-2 w-6 h-6 rounded-full bg-slate-300 hover:bg-slate-400 flex items-center justify-center text-slate-600 hover:text-slate-700 transition-colors duration-200"
                            title="Learn about budget setup"
                          >
                            <svg className="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                              <path fillRule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clipRule="evenodd" />
                            </svg>
                          </button>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>

              {/* Quick Actions */}
              <div className="bg-white/60 backdrop-blur-lg rounded-3xl p-8 mb-12 border border-white/30 shadow-lg">
                <h3 className="text-2xl font-bold text-slate-900 mb-6">Quick Actions</h3>
                {hasHouseholds ? (
                  <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    {[
                      { title: "Add Receipt", icon: "üìÑ", color: "blue", action: () => router.push(`/receipts?household=${currentHousehold?.id}`) },
                      { title: "View Budget", icon: "üìä", color: "emerald", action: () => router.push('/budget') },
                      { title: "Manage Categories", icon: "üè∑Ô∏è", color: "violet", action: () => router.push('/categories') },
                      { title: "Manage Households", icon: "üè†", color: "indigo", action: () => router.push('/households') },
                    ].map((action, index) => (
                      <Button
                        key={action.title}
                        onClick={action.action}
                        className={`group relative h-16 bg-gradient-to-r from-${action.color}-500 to-${action.color}-600 hover:from-${action.color}-600 hover:to-${action.color}-700 text-white font-semibold rounded-2xl shadow-lg hover:shadow-2xl hover:shadow-${action.color}-500/25 transform hover:scale-105 transition-all duration-300 overflow-hidden`}
                        style={{ animationDelay: `${index * 50}ms` }}
                      >
                        <div className="absolute inset-0 bg-gradient-to-r from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <span className="relative z-10 flex items-center justify-center">
                          <span className="text-xl mr-3 group-hover:scale-110 transition-transform duration-300">{action.icon}</span>
                          {action.title}
                        </span>
                      </Button>
                    ))}
                  </div>
                ) : (
                  <div className="text-center py-12">
                    <div className="w-16 h-16 bg-gradient-to-br from-slate-100 to-slate-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
                      <span className="text-2xl">üè†</span>
                    </div>
                    <p className="text-slate-600 mb-6">Create your first household to unlock all features</p>
                    <Button
                      onClick={() => router.push('/households')}
                      className="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-blue-500/25 transition-all duration-300"
                    >
                      Create Household
                    </Button>
                  </div>
                )}
              </div>

              <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {/* Recent Receipts */}
                <div className="bg-white/60 backdrop-blur-lg rounded-3xl p-8 border border-white/30 shadow-lg">
                  <div className="flex items-center justify-between mb-6">
                    <h3 className="text-2xl font-bold text-slate-900">Recent Receipts</h3>
                    <Button
                      onClick={() => router.push(`/receipts?household=${currentHousehold?.id}`)}
                      className="bg-slate-100/80 hover:bg-slate-200/80 text-slate-700 border-0 shadow-none text-sm h-10 px-4 rounded-xl backdrop-blur-sm transition-all duration-300"
                    >
                      View All
                    </Button>
                  </div>
                  
                  {isLoadingData ? (
                    <div className="space-y-4">
                      {Array.from({ length: 3 }).map((_, i) => (
                        <div key={i} className="animate-pulse p-4 bg-white/80 rounded-2xl border border-white/30">
                          <div className="flex items-center justify-between mb-2">
                            <div className="h-4 bg-slate-200 rounded w-32"></div>
                            <div className="h-5 bg-slate-200 rounded w-20"></div>
                          </div>
                          <div className="flex items-center space-x-3">
                            <div className="h-3 bg-slate-200 rounded w-24"></div>
                            <div className="h-5 bg-slate-200 rounded w-16"></div>
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : receipts.length > 0 ? (
                    <div className="space-y-4">
                      {receipts.map((receipt, index) => (
                        <div 
                          key={receipt.id} 
                          className="group flex items-center justify-between p-4 bg-white/80 rounded-2xl border border-white/30 shadow-sm hover:shadow-lg transition-all duration-300 hover:scale-102"
                          style={{ animationDelay: `${index * 100}ms` }}
                        >
                          <div className="flex-1">
                            <div className="flex items-center justify-between mb-2">
                              <h4 className="font-semibold text-slate-900 group-hover:text-slate-700 transition-colors duration-300">{receipt.title}</h4>
                              <span className="font-bold text-slate-900 text-lg">{formatCurrency(receipt.amount)}</span>
                            </div>
                            <div className="flex items-center space-x-3 text-sm">
                              <span className="text-slate-500">
                                {formatDisplayDate(receipt.receipt_date)}
                              </span>
                              <span className="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                {receipt.category?.name}
                              </span>
                            </div>
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-12">
                      <div className="w-16 h-16 bg-gradient-to-br from-slate-100 to-slate-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
                        <span className="text-2xl">üìÑ</span>
                      </div>
                      <p className="text-slate-600 mb-6">No receipts yet</p>
                      <Button
                        onClick={() => router.push(`/receipts?household=${currentHousehold?.id}`)}
                        className="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-blue-500/25 transition-all duration-300"
                      >
                        Add Your First Receipt
                      </Button>
                    </div>
                  )}
                </div>

                {/* Budget Overview */}
                <div className="bg-white/60 backdrop-blur-lg rounded-3xl p-8 border border-white/30 shadow-lg">
                  <div className="flex items-center justify-between mb-6">
                    <h3 className="text-2xl font-bold text-slate-900">Budget Overview</h3>
                    <Button
                      onClick={() => router.push('/budget')}
                      className="bg-slate-100/80 hover:bg-slate-200/80 text-slate-700 border-0 shadow-none text-sm h-10 px-4 rounded-xl backdrop-blur-sm transition-all duration-300"
                    >
                      View Details
                    </Button>
                  </div>
                  
                  {isLoadingData ? (
                    <div className="space-y-6">
                      {Array.from({ length: 4 }).map((_, i) => (
                        <div key={i} className="space-y-3 animate-pulse">
                          <div className="flex items-center justify-between">
                            <div className="h-4 bg-slate-200 rounded w-24"></div>
                            <div className="h-4 bg-slate-200 rounded w-32"></div>
                          </div>
                          <div className="w-full h-3 bg-slate-200 rounded-full"></div>
                        </div>
                      ))}
                    </div>
                  ) : categories.length > 0 ? (
                    <div className="space-y-6">
                      {categories.map((item, index) => (
                        <div 
                          key={item.id} 
                          className="space-y-3"
                          style={{ animationDelay: `${index * 100}ms` }}
                        >
                          <div className="flex items-center justify-between">
                            <span className="font-semibold text-slate-900">{item.name}</span>
                            <span className="text-slate-600 font-medium">
                              {formatCurrency(item.spent)} / {formatCurrency(item.budget)}
                            </span>
                          </div>
                          <div className={`w-full rounded-full h-3 border ${getProgressBarBgColor(item.spent / item.budget)} relative overflow-hidden`}>
                            <div 
                              className={`h-full rounded-full bg-gradient-to-r ${getProgressBarColor(item.spent / item.budget)} transition-all duration-1000 ease-out relative`}
                              style={{ width: `${Math.min(100, (item.spent / item.budget) * 100)}%` }}
                            >
                              <div className="absolute inset-0 bg-gradient-to-r from-white/30 to-transparent"></div>
                            </div>
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-12">
                      <div className="w-16 h-16 bg-gradient-to-br from-slate-100 to-slate-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
                        <span className="text-2xl">üìä</span>
                      </div>
                      <p className="text-slate-600 mb-6">No budget data yet</p>
                      <Button
                        onClick={() => router.push('/categories')}
                        className="bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-emerald-500/25 transition-all duration-300"
                      >
                        Set Up Budgets
                      </Button>
                    </div>
                  )}
                </div>
              </div>
            </>
          )}
        </div>
      </div>
    </Layout>
  );
}

export default function HomePage() {
  const { user, loading } = useAuth();

  if (loading) {
    return (
      <LoadingPage 
        title="Loading Dashboard" 
        subtitle="Please wait while we load your financial command center..." 
      />
    );
  }

  return (
    <AllowNoHousehold fallback={<LandingPage />}>
      <Suspense fallback={<LoadingPage title="Loading..." />}>
        <DashboardComponent />
      </Suspense>
    </AllowNoHousehold>
  );
}

