# Next.js Web Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Public Keys (for client-side access)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# OAuth Redirect URL (for production, set this to your Vercel URL)
# Example: https://homebudget-web.vercel.app/auth/callback
# Leave empty to use current origin (works for localhost)
NEXT_PUBLIC_AUTH_REDIRECT_URL=

# Backend API URL (server-side only, not exposed to client)
# For local development: http://localhost:3001
# For production: your deployed backend URL (e.g., https://homebudget-api.vercel.app)
BACKEND_URL=http://localhost:3001

# API URL for the backend (legacy, may not be used)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api # Adjust if your backend API prefix is different
